<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Update A Normal Quiz</title>
    <link rel="stylesheet" href="/css/styles.css" />
</head>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

<body>
    <div class="topnav">
        <a href="/">Users</a>
        <a href="/skill">Skills</a>
        <a href="/topic">Topics</a>
        <a href="/lesson">Lessons</a>
        <a href="/voiceQuiz">Voice Quizs</a>
        <a href="/multipleChoiceQuiz">Multiple Choice Quizs</a>
        <a href="/descriptionQuiz">Description Quizs</a>
        <a class="active" href="/lettersIntoWordsQuiz">Letters Into Words Quizs</a>
    </div>
    <div class="form-add-new">
        <form action="/update-normalQuiz" method="POST">
            <fieldset>
                <legend>Update A Normal Quiz</legend>
                <div class="input-group d-none">
                    <label>Id: </label>
                    <input type="text" name="normalQuizId" value="<%= normalQuizUpdate.id %>" />
                </div>
                <div class="input-group">
                    <label>Word_1: </label>
                    <input type="text" name="word_1" value="<%= normalQuizUpdate.word_1 %>" />
                </div>
                <div class="input-group">
                    <label>Word_2: </label>
                    <input type="text" name="word_2" value="<%= normalQuizUpdate.word_2 %>" />
                </div>
                <div class="input-group">
                    <label>Word_3: </label>
                    <input type="text" name="word_3" value="<%= normalQuizUpdate.word_3 %>" />
                </div>
                <div class="input-group">
                    <label>Word_4: </label>
                    <input type="text" name="word_4" value="<%= normalQuizUpdate.word_4 %>" />
                </div>
                <div class="input-group">
                    <label>Meaning: </label>
                    <input type="text" name="meaning" value="<%= normalQuizUpdate.meaning %>" />
                </div>
                <div class="input-group">
                    <label>Answer: </label>
                    <select name="answer">
                        <% for (let i=1; i < 5 ; i++) { %>
                            <% if(normalQuizUpdate.answer==i) { %>
                                <option selected="selected">
                                    <%= i %>
                                </option>
                                <% } else { %>
                                    <option>
                                        <%= i %>
                                    </option>
                                    <% } %>
                                        <% } %>
                    </select>
                </div>
                <div class="input-group">
                    <label>Lesson: </label>
                    <select name="lesson_name">
                        <% listLessons.forEach(function(lesson, index) { %>
                            <% if(lesson.id==normalQuizUpdate.lesson_id) { %>
                                <option selected="selected">
                                    <%= lesson.name %>
                                </option>
                                <% } else { %>
                                    <option>
                                        <%= lesson.name %>
                                    </option>
                                    <% } %>
                                        <% }); %>
                    </select>
                </div>

                <div class="input-group">
                    <button class="btnSave">Save</button>
                </div>
            </fieldset>
        </form>
    </div>
</body>

</html>